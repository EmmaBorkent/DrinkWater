<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A style is a collection of attributes that specify the appearance for a single View.
    A style can specify attributes such as font color, font size, background color, and more. -->

    <!-- Application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="floatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@color/colorAccentLight</item>
    </style>

    <style name="addRemoveButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:tint">@color/colorAccentLight</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    // This is double, but I do not yet understand how to do this better ...
    // I just need the text styles and need to be able to combine them with button styles
    <style name="plainTextButton" parent="Headline3">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    // This is double, but I do not yet understand how to do this better ...
    <style name="plainTextButton.Big" parent="Caption1">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    // This is double, but I do not yet understand how to do this better ...
    <style name="plainTextButton.Small" parent="Headline3">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BaseIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        // According to material design 4dp grid system for
        // bottom app bar, iconography and typography
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="IconYellow" parent="BaseIcon">
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="IconGrey" parent="BaseIcon">
        <item name="tint">@color/colorOnSurface</item>
    </style>

    <style name="IconDarkGrey" parent="BaseIcon">
        <item name="tint">@color/textColorPrimary</item>
    </style>

<!--    <style name="testBackground">-->
<!--        <item name="android:background">@color/appleGreen</item>-->
<!--    </style>-->

    <style name="whiteBox">
        <item name="android:background">@drawable/corners_rounded_shade</item>
        <item name="android:elevation">2dp</item>
    </style>


    // Text Styles

    <style name="Title">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MainTextNumbers">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="primaryFontFamily">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Headline1" parent="primaryFontFamily">
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline2" parent="primaryFontFamily">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Headline3" parent="primaryFontFamily">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Headline4" parent="primaryFontFamily">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Subtitle1" parent="primaryFontFamily"/>

    <style name="Caption1" parent="primaryFontFamily">
        <item name="android:textSize">86sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption2" parent="Caption1">
        <item name="android:textSize">48sp</item>
    </style>



</resources>
