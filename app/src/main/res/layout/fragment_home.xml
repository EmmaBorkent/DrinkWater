<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_home_title"
            android:text="@string/main_title"
            android:textAllCaps="true"
            android:fontFamily="@font/julius_sans_one"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
        />

<!--        <TextView-->
<!--            android:id="@+id/mainTextIntake"-->
<!--            android:text="@string/main_drank"-->
<!--            android:fontFamily="@font/montserrat"-->
<!--            android:textSize="24sp"-->
<!--            android:textAlignment="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="32dp"-->

<!--            app:layout_constraintTop_toBottomOf="@+id/fragment_home_title"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            />-->

        <TextView
            android:id="@+id/fragment_home_goal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/main_goal_start_amount"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_home_title"
            
            android:layout_margin="16dp"
        />
    
        <TextView
            android:id="@+id/mainTextUnit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/main_unit"
            android:textAlignment="center"
            android:textSize="24sp"
            
            app:layout_constraintStart_toEndOf="@id/fragment_home_goal_text"
            app:layout_constraintTop_toTopOf="@id/fragment_home_goal_text"
            app:layout_constraintBottom_toBottomOf="@id/fragment_home_goal_text"
            
            android:layout_marginStart="16dp"
        />

        <TextView
            android:id="@+id/fragment_home_goal_percentage"
            android:text="@string/main_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="80sp"
            android:textAlignment="center"
                android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_home_title"
            app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="100dp"
        />

        <TextView
            android:id="@+id/fragment_home_percentage_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/percentage_unit"
            android:textAlignment="center"
            android:textSize="32sp"
                android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/fragment_home_goal_percentage"
                app:layout_constraintTop_toTopOf="@id/fragment_home_goal_percentage"
                app:layout_constraintBottom_toBottomOf="@id/fragment_home_goal_percentage"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
        />

        <TextView
                android:id="@+id/fragment_home_volume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/main_goal_start_amount"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="24sp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_margin="16dp"
                />

        <TextView
                android:id="@+id/mainTextUnit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="@string/main_unit"
                android:textAlignment="center"
                android:textSize="24sp"

                app:layout_constraintStart_toEndOf="@id/fragment_home_volume_text"
                app:layout_constraintTop_toTopOf="@id/fragment_home_volume_text"
                app:layout_constraintBottom_toBottomOf="@id/fragment_home_volume_text"

                android:layout_marginStart="16dp"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

