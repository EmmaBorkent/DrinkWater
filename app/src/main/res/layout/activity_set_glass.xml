<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.SetGlassActivity">

    <TextView
            android:id="@+id/setGlassTextTitle"
            android:text="@string/set_glass"
            android:fontFamily="@font/julius_sans_one"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="center"/>

    <TextView
            android:id="@+id/setGlassText"
            android:text="@string/set_glass_text"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/setGlassTextTitle" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
            android:id="@+id/setGlassImageGlass"
            app:srcCompat="@drawable/water01"
            android:contentDescription="@string/glass_250"
            android:background="@android:color/transparent"
            android:onClick="setGlass250"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/setGlassText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/setGlassImageBottle"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/water02"
            android:id="@+id/setGlassImageBottle"
            app:layout_constraintStart_toEndOf="@+id/setGlassImageGlass" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="w,1:1"
            android:layout_marginStart="20dp" android:layout_marginEnd="40dp"
            app:layout_constraintTop_toTopOf="@+id/setGlassImageGlass"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent" android:contentDescription="@string/glass_500"
            android:onClick="setGlass500"/>

    <TextView
            android:id="@+id/setGlassTextGlass"
            android:text="@string/glass_250"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/setGlassImageGlass"
            app:layout_constraintStart_toStartOf="@+id/setGlassImageGlass" app:layout_constraintEnd_toEndOf="@+id/setGlassImageGlass"/>

    <TextView
            android:id="@+id/setGlassTextBottle"
            android:text="@string/glass_500"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/setGlassImageBottle"
            app:layout_constraintStart_toStartOf="@+id/setGlassImageBottle" app:layout_constraintEnd_toEndOf="@+id/setGlassImageBottle"/>

</android.support.constraint.ConstraintLayout>