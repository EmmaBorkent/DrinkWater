<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/popupGlassImage"
        android:layout_width="224dp"
        android:layout_height="224dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/custom_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/water01" />
    
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_left"
        android:id="@+id/popupArrowLeft"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@+id/popupGlassImage"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/popupGlassImage"
        app:layout_constraintBottom_toBottomOf="@+id/popupGlassImage"
        android:contentDescription="@string/custom_left"
        android:onClick="prevImage"/>
    
    
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right"
        android:id="@+id/popupArrowRight"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@+id/popupGlassImage"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/popupGlassImage"
        app:layout_constraintBottom_toBottomOf="@+id/popupGlassImage"
        android:contentDescription="@string/custom_right"
        android:onClick="nextImage"/>
    
    <TextView
        android:id="@+id/popupVolume"
        android:text="@string/glass_250"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/popupGlassImage"
        app:layout_constraintEnd_toEndOf="@+id/popupGlassImage"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/popupGlassImage"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintBottom_toTopOf="@id/popupSelectButton"
        android:layout_marginBottom="16dp"
    />
    
    <TextView
        android:id="@+id/popupUnit"
        android:text="@string/main_unit"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/popupVolume"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/popupVolume"
        app:layout_constraintBottom_toBottomOf="@+id/popupVolume"/>
    
    <Button
        android:id="@+id/popupSelectButton"
        android:text="@string/popup_select_button"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="setCustomGlass"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>