<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/main_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drinkListUnit"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/drinkListText"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/drinkListText"
            app:layout_constraintBottom_toBottomOf="@+id/drinkListText"/>

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/water01"
            android:id="@+id/drinkListImage"
            android:contentDescription="@string/drink_list_image"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="@string/basic_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/drinkListText"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/drinkListImage"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
            android:id="@+id/drinkListButtonDelete"
            android:background="@android:color/transparent"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:tint="#FA6A75"
            android:contentDescription="@string/drink_list_delete_button"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@android:drawable/ic_menu_delete"
            android:onClick="deleteDrink"
            app:layout_constraintStart_toEndOf="@+id/drinkListUnit"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>