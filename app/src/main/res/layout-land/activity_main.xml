<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.MainActivity">

    <TextView
            android:id="@+id/mainTextUnit6"
            android:text="@string/main_unit"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/mainTextGoalNumber"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/mainTextGoalNumber"
            app:layout_constraintBottom_toBottomOf="@+id/mainTextGoalNumber"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>

    <Button
            android:id="@+id/mainButtonSetGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_goal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/tertiary_text_light"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAllCaps="true"

            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTextUnit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintEnd_toStartOf="@+id/mainTextGoalNumber"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"

            android:onClick="setGoal"/>

    <TextView
            android:id="@+id/mainText2"
            android:text="@string/main_text_2"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/mainText"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="@id/guideline"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainTextGoalNumber"
            android:text="@string/main_goal_start_amount"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textAllCaps="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/mainButtonSetGoal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/mainTextUnit6"
            app:layout_constraintTop_toTopOf="@+id/mainButtonSetGoal"
            app:layout_constraintBottom_toBottomOf="@+id/mainButtonSetGoal"
            />

    <TextView
            android:id="@+id/mainText"
            android:text="@string/main_text"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/mainTextToday"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/drinksTodayList"/>

    <TextView
            android:id="@+id/mainTextUnit3"
            android:text="@string/main_unit"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/mainWaterAmount"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/mainWaterAmount"
            app:layout_constraintTop_toTopOf="@+id/mainWaterAmount"/>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_action_add"
            android:id="@+id/mainButtonAdd"
            android:onClick="addWaterClick"
            app:fabSize="auto"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>

    <ImageButton
            android:id="@+id/mainDrinkImage"
            android:contentDescription="@string/add_glass"
            android:background="@drawable/water01"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:onClick="setGlassClick"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/mainWaterAmount"
            app:layout_constraintStart_toStartOf="@+id/mainWaterAmount"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/mainTextUnit3"/>

    <TextView
            android:text="@string/glass_250"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainWaterAmount"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/mainTextUnit"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.64"/>

    <TextView
            android:id="@+id/mainTextToday"
            android:text="@string/main_title"
            android:fontFamily="@font/julius_sans_one"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:textAllCaps="true"/>

    <TextView
            android:id="@+id/mainTextIntake"
            android:text="@string/main_drank"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/mainTextDailyTotal"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/mainText2"/>

    <TextView
            android:id="@+id/mainTextDailyTotal"
            android:text="@string/main_total"
            android:fontFamily="@font/julius_sans_one"
            android:textSize="52sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/mainTextUnit"
            app:layout_constraintTop_toBottomOf="@+id/mainTextIntake"
            app:layout_constraintStart_toStartOf="@+id/mainTextIntake"
            app:layout_constraintEnd_toEndOf="@+id/mainTextIntake"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/mainTextUnit"
            android:text="@string/main_unit"
            android:fontFamily="@font/montserrat"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTextDailyTotal"
            app:layout_constraintStart_toStartOf="@+id/mainTextDailyTotal"
            app:layout_constraintEnd_toEndOf="@+id/mainTextDailyTotal"
            app:layout_constraintBottom_toTopOf="@+id/mainButtonSetGoal"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/drinksTodayList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:background="#2280CBC4"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.56"/>

</android.support.constraint.ConstraintLayout>