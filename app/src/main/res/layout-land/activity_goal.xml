<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.GoalActivity">

    <TextView
            android:id="@+id/goalTextTitle"
            android:text="@string/goal_title"
            android:fontFamily="@font/julius_sans_one"
            android:textSize="42sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textAllCaps="true"/>

    <TextView
            android:id="@+id/goalText"
            android:text="@string/goal_text"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/goalTextTitle"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goalText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="32dp"
            android:stretchColumns="0, 1, 2, 3">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp">

            <TextView
                    android:layout_span="2"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:id="@+id/goalTextEnterWeightText2"
                    android:text="@string/goal_enter_weight_text"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textAlignment="center"/>

            <TextView
                    android:layout_span="2"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:id="@+id/goalTextEnterWeightText"
                    android:text="@string/goal_enter_goal"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textAlignment="center"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp">

            <EditText
                    android:layout_width="112dp"
                    android:id="@+id/goalWeightInput"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:labelFor="@id/goalWeightInput"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:ems="10"
                    android:textAlignment="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/mainTextWeightUnit"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="60dp"
                    android:text="@string/goal_weight"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    android:textAlignment="center"/>

            <EditText
                    android:layout_width="112dp"
                    android:id="@+id/goalInput"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:labelFor="@id/goalInput"
                    android:importantForAutofill="no"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    android:inputType="number"
                    android:ems="10"
                    android:textAlignment="center"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/mainTextUnit8"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="60dp"
                    android:text="@string/main_unit"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    android:textAlignment="center"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_span="2"
                    android:id="@+id/goalCalculate"
                    android:layout_margin="8dp"
                    android:text="@string/goal_calculate"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="calculateGoal"/>

            <Button
                    android:layout_span="2"
                    android:id="@+id/goalButtonSetGoal"
                    android:layout_margin="8dp"
                    android:text="@string/main_button_set_goal"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:onClick="setGoal"/>

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>